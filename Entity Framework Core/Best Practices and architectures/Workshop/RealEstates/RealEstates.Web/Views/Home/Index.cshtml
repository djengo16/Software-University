@model IEnumerable<RealEstates.Services.Models.DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Welcome to Real Estates BG!</h2>   
</div>
<div>
    <table class="table table-striped table-hover table-sm">
        <tr>
            <th>District</th>
            <th>Avg. price in m2</th>
            <th>Min. price</th>
            <th>Max. price</th>
            <th>Properties Count</th>
        </tr>
            @foreach (var district in this.Model.Where(x => x.PropertiesCount >= 20))
            {
                <tr>
                    <td>@district.Name</td>
                    <td>@district.AveragePrice€</td>
                    <td>@district.MinPrice€</td>
                    <td>@district.MaxPrice€</td>
                    <td>@district.PropertiesCount</td>
                </tr>
            }
        </tr>
    </table>
</div>